@model UserSignUpForm
@{
	ViewData["Title"] = "Sign Up";
}

<div id="signup">
	<div class="wrapper">
		<h1 class="heading">Create Account</h1>
		<div class="form-container">
			<form id="signup-form" asp-action="SignUp" asp-controller="Auth" method="post" novalidate>
				<div class="form-group signup">
					<label asp-for="FullName"></label>
					<div class="field-group">
						<input asp-for="FullName" />
						<span class="FullName" asp-validation-for="FullName"></span>
					</div>
				</div>

				<div class="form-group signup">
					<label asp-for="Email"></label>
					<div class="field-group">
						<input asp-for="Email" />
						<span class="Email" asp-validation-for="Email"></span>
					</div>
				</div>

				<div class="form-group signup">
					<label asp-for="Password"></label>
					<div class="field-group">
						<input asp-for="Password" />
						<span class="Password" asp-validation-for="Password"></span>
					</div>
				</div>

				<div class="form-group signup">
					<label asp-for="ConfirmPassword"></label>
					<div class="field-group">
						<input asp-for="ConfirmPassword" />
						<span class="ConfirmPassword" asp-validation-for="ConfirmPassword"></span>
					</div>
				</div>

				<div class="form-group signup terms">
					<div class="field-group terms">
						<input asp-for="TermsAndConditions" />
						<p>I accept</p><a target="_blank" href="https://developer.mozilla.org/">Terms and Conditions</a>
					</div>
					<span asp-validation-for="TermsAndConditions"></span>
				</div>
				@Html.ValidationMessage("Exists")
				@Html.ValidationMessage("NotCreated")

				<button type="submit" class="btn btn-submit btn-primary">Create Account</button>
			</form>
		</div>
		<div class="form-link">
			<p>Already have an account?</p>
			<a asp-controller="Auth" asp-action="SignIn">Login</a>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/validate.js"></script>
}
